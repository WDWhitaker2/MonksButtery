@model MonksInn.Backend.Models.SystemUser.AddViewModel

@{
    ViewData["Title"] = $"{(ViewBag.IsUpdate == true ? "Update" : "Add")} System User";
    ViewData["ActiveNav"] = "System Users";
}

<div class="row">
    <div class="col-lg-4">
        <form action="@Url.Action()" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" type="password" class="form-control" autocomplete="off" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Role" class="control-label"></label>
                <select asp-for="Role" class="form-control">
                    @foreach (var item in Model.CurrentRoles)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>


            <div class="form-group text-right">
                <input type="submit" value="@(ViewBag.IsUpdate == true ? "Update" : "Add")" class="btn btn-sm btn-outline-primary" />
                <a asp-action="Index" class="btn  btn-sm btn-outline-primary">Back</a>
            </div>
        </form>
    </div>
</div>

