@model MonksInn.Backend.Models.PricingStructure.AddRetailViewModel

@{
    ViewData["Title"] = $"{(ViewBag.IsUpdate == true ? "Update" : "Add")} Retail Pricing Structure";
    ViewData["ActiveNav"] = $"Pricing Structure";
}

<div class="row">
    <div class="col-lg-4">
        <form action="@Url.Action()" method="post">
            <input asp-for="Id" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="RetailBeerType" class="control-label"></label>
                <div>
                    <select asp-for="RetailBeerType" class="form-control">
                        <option value="">All</option>
                        @foreach (var item in Model.BeerTypeList.OrderBy(a => a.Key))
                        {
                            <option value="@item.Key">@item.Value</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="RetailBeerType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RetailAbvLimit" class="control-label"></label>
                <input asp-for="RetailAbvLimit" type="number" step="0.01" min="0" class="form-control" />
                <span asp-validation-for="RetailAbvLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RetailDefaultAbvPrice" class="control-label"></label>
                <input asp-for="RetailDefaultAbvPrice" type="number" step="0.01" min="0" class="form-control" />
                <span asp-validation-for="RetailDefaultAbvPrice" class="text-danger"></span>
            </div>


            <div class="form-group text-right">
                <input type="submit" value="@(ViewBag.IsUpdate == true ? "Update" : "Add")" class="btn btn-sm btn-outline-primary" />
                <a asp-action="Index" class="btn  btn-sm btn-outline-primary">Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts{

    <script>
        $("#RetailBeerType").select2({
        });
    </script>

}