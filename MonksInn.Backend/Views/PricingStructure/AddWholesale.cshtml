@model MonksInn.Backend.Models.PricingStructure.AddWholesaleViewModel

@{
    ViewData["Title"] = $"{(ViewBag.IsUpdate == true ? "Update" : "Add")} Wholesale Pricing Structure";
    ViewData["ActiveNav"] = "Pricing Structure";
}

<div class="row">
    <div class="col-lg-4">
        <form action="@Url.Action()" method="post">
            <input asp-for="Id" type="hidden" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

          
                <div class="form-group">
                    <label asp-for="WholeSaleUnitSize" class="control-label"></label>
                    <div>
                        <select asp-for="WholeSaleUnitSize" class="form-control">
                            <option value="">All</option>
                            @foreach (var item in Model.UnitSizeList.OrderBy(a => a))
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                    <span asp-validation-for="WholeSaleUnitSize" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WholeSaleDefaultFlatMarkup" class="control-label"></label>
                    <input asp-for="WholeSaleDefaultFlatMarkup" type="number" step="0.01" min="0" class="form-control" />
                    <span asp-validation-for="WholeSaleDefaultFlatMarkup" class="text-danger"></span>
                </div>
           


            <div class="form-group text-right">
                <input type="submit" value="@(ViewBag.IsUpdate == true ? "Update" : "Add")" class="btn btn-sm btn-outline-primary" />
                <a asp-action="Index" class="btn  btn-sm btn-outline-primary">Back</a>
            </div>
        </form>
    </div>
</div>


@section Scripts{

    <script>
            $("#WholeSaleUnitSize").select2({
            });
    </script>

}