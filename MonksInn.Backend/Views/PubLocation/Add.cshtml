@model MonksInn.Backend.Models.PubLocation.AddViewModel

@{
    ViewData["Title"] = $"{(ViewBag.IsUpdate == true ? "Update" : "Add")} Pub Location";
    ViewData["ActiveNav"] = "Pub Locations";
}

<div class="row">
    <div class="col-lg-4">
        <form action="@Url.Action()" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" rows="6" class="form-control"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DefaultIsDeliveryLocation" /> @Html.DisplayNameFor(model => model.DefaultIsDeliveryLocation)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DefaultIsTakeawayLocation" /> @Html.DisplayNameFor(model => model.DefaultIsTakeawayLocation)
                </label>
            </div>
            <div class="form-group text-right">
                <input type="submit" value="@(ViewBag.IsUpdate == true ? "Update" : "Add")" class="btn btn-sm btn-outline-primary" />
                <a asp-action="Index" class="btn  btn-sm btn-outline-primary">Back</a>
            </div>
        </form>
    </div>
</div>

