@model MonksInn.Backend.Models.Bookings.AddViewModel

@{
    ViewData["Title"] = ViewBag.IsUpdate == true ? "Update Booking" : "Add Booking";
    ViewData["ActiveNav"] = "Bookings";
}

<div class="row">
    <div class="col-lg-4">
        <form action="@Url.Action()" method="post">
            <input type="hidden" asp-for="Id" class="form-control" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Occasion" class="control-label"></label>
                <select asp-for="Occasion" class="form-control">
                    <option></option>
                    <option>16th Birthday Party</option>
                    <option>18th Birthday Party</option>
                    <option>21st Birthday Party</option>
                    <option>30th Birthday Party</option>
                    <option>40th Birthday Party</option>
                    <option>50th Birthday Party</option>
                    <option>60th Birthday Party</option>
                    <option>70th Birthday Party</option>
                    <option>Anniversary Party</option>
                    <option>Child Birthday Party</option>
                    <option>Corporate Event</option>
                    <option>Engagement Party</option>
                    <option>Halloween Party</option>
                    <option>New Years Eve Party</option>
                    <option>School Disco</option>
                    <option>School Prom</option>
                    <option>Wedding</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="Occasion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumberOfGuests" class="control-label"></label>
                <input asp-for="NumberOfGuests" class="form-control" />
                <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateOfBooking" class="control-label"></label>
                <input asp-for="DateOfBooking" type="date" class="form-control" />
                <span asp-validation-for="DateOfBooking" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <select asp-for="StartTime" class="form-control">
                    <option></option>
                    @for (int i = 0; i < 24; i++)
                    {
                        <option value="@i">@(i.ToTimeFormat())</option>
                    }
                </select>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <select asp-for="EndTime" class="form-control">
                    <option></option>
                    @for (int i = 0; i < 24; i++)
                    {
                        <option value="@i">@(i.BufferLength(2)):00</option>
                    }
                </select>
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrepTime" class="control-label"></label>
                <select asp-for="PrepTime" class="form-control">
                    <option></option>
                    @for (int i = 0; i < 24; i++)
                    {
                        <option value="@i">@(i.BufferLength(2)):00</option>
                    }
                </select>
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label"></label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>

            @if (ViewBag.IsUpdate == true)
            {
                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="DepositPaid" type="checkbox" value="true" /> @Html.DisplayNameFor(a => a.DepositPaid)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="DepositPaidBy" class="control-label"></label>
                    <select asp-for="DepositPaidBy" class="form-control">
                        <option></option>
                        <option>Cash</option>
                        <option>Card</option>
                        <option>BACS</option>
                    </select>
                    <span asp-validation-for="DepositPaidBy" class="text-danger"></span>
                </div>

            }

            <div class="form-group text-right">
                <input type="submit" value="@(ViewBag.IsUpdate == true ? "Update" : "Add")" class="btn btn-sm btn-outline-primary" />
                <a asp-action="Index" class="btn  btn-sm btn-outline-primary">Back</a>
            </div>
        </form>
    </div>
</div>




