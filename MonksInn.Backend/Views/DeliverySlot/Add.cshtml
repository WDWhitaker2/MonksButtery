@model MonksInn.Backend.Models.DeliverySlot.AddViewModel

@{
    ViewData["Title"] = $"{(ViewBag.IsUpdate == true ? "Update" : "Add")} Delivery Slot";
    ViewData["ActiveNav"] = "Delivery Slot";
}

<div class="row">
    <div class="col-lg-4">
        <form action="@Url.Action()" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label"></label>
                <select asp-for="DayOfWeek" class="form-control">
                    <option></option>
                    @foreach (var item in EnumExtensions.EnumDictionary<System.DayOfWeek>())
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select>
                <span asp-validation-for="DayOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <select asp-for="StartTime" class="form-control">
                    <option></option>
                    @for (int i = 0; i < 24; i++)
                    {
                        <option value="@i">@(i.ToTimeFormat())</option>
                    }
                </select>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <select asp-for="EndTime" class="form-control">
                    <option></option>
                    @for (int i = 0; i < 24; i++)
                    {
                        <option value="@i">@(i.BufferLength(2)):00</option>
                    }
                </select>
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
           
            <div class="form-group text-right">
                <input type="submit" value="@(ViewBag.IsUpdate == true ? "Update" : "Add")" class="btn btn-sm btn-outline-primary" />
                <a asp-action="Index" class="btn  btn-sm btn-outline-primary">Back</a>
            </div>
        </form>
    </div>
</div>

