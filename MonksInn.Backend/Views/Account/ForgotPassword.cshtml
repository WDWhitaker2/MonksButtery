@model MonksInn.Backend.Models.Account.ForgotPasswordViewModel

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h1 class="text-center">Forgotten Password?</h1>

@if (Model.LinkSent)
{
    <div class="alert alert-success">
        A password reset link has been sent to the email '@Model.EmailAddress.ToLower()'.
    </div>
}
else
{

    <p>Please provide your user email address and a password reset link will be sent to it.</p>
    <form asp-action="ForgotPassword">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="EmailAddress" class="control-label"></label>
            <input asp-for="EmailAddress" class="form-control" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Send Reset Password Link" class="btn btn-block btn-outline-primary" />
        </div>
        
    </form>
}
<div class="form-group">
    <a class="btn btn-outline-primary btn-block " href="@Url.Action("Login")">Back</a>
</div>

